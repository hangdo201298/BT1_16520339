<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:BT1_16520339"
             x:Class="BT1_16520339.MainPage">
    <ScrollView>
    <StackLayout>
        <!-- Place new controls here -->
        <Button Text="Màn Hình Chào" x:Name="cmdHelloScreen" Clicked="CmdHelloScreen_Clicked"/>
        <Button Text="Màn Hình Tính Tổng" x:Name="cmdSumScreen" Clicked="CmdSumScreen_Clicked" VerticalOptions="Center" HorizontalOptions="Center"/>
        <Button Text="StackLayout" HorizontalOptions="Center" x:Name="cmdStackLayout" Clicked="CmdStackLayout_Clicked"/>
        <Button Text="AbsoluteLayout" HorizontalOptions="Center" x:Name="cmdAbsoluteLayout" Clicked="CmdAbsoluteLayout_Clicked"/>
        <Button Text="GridLayout" x:Name="cmdGridLayout" Clicked="CmdGridLayout_Clicked"/>
        <Button Text="Login" x:Name="cmdLogin" Clicked="CmdLogin_Clicked"/>
        <Button Text="FlexLayout" x:Name="cmdFlexLayout" Clicked="CmdFlexLayout_Clicked"/>
        <Button Text="ScrollView" x:Name="cmdScrollView" Clicked="CmdScrollView_Clicked"/>
        <Button Text="Listview 1" x:Name="cmdListview1" Clicked="CmdListview1_Clicked"/>
        <Button Text="Calculator" x:Name="cmdCalculator" Clicked="CmdCalculator_Clicked"/>
        </StackLayout>
    </ScrollView>

</ContentPage>
